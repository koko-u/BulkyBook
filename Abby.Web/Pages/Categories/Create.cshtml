@page
@model Abby.Web.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "Create Category";
}
@section Scripts {
    <script defer type="text/javascript">
        $(document).ready(() => {
            $('.input-validation-error').addClass('is-invalid');
            $('.field-validation-error').addClass('is-invalid');
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}


    <h1 class="mt-2 mb-4">
        Create New Category
    </h1>

    <form method="POST">
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="CreateCategory.Name">Category Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="CreateCategory.Name" aria-describedby="nameFeedback">
                <div id="nameFeedback" class="invalid-feedback">
                    <span asp-validation-for="CreateCategory.Name"></span>
                </div>
            </div>
        </div>
        <div class="mb-3 d-flex flex-row">
            <button type="submit" class="me-1 btn btn-primary">Create</button>
            <a class="ms-1 btn btn-outline-secondary" asp-page="Index">
                Cancel
            </a>
        </div>
    </form>