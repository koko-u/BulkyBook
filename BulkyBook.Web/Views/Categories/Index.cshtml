@using BulkyBook.Presentation
@using BulkyBook.Presentation.ViewModels
@model IEnumerable<CategoryViewModel>
@{
    ViewData["Title"] = "Category List";
}
@section Scripts
{


    <script type="text/javascript">
        $(document).ready(() => {
            setTimeout(() => {
                    const toastEl = document.getElementById('successMessage');
                    if (!toastEl) return;

                    const toast = new bootstrap.Toast(toastEl, {});
                    toast.show();
                },
                500);
        });

    </script>

}

@if (TempData.TryGetValue(TempDataKeys.SuccessMessage, out var successMessage))
{
    <div class="position-absolute top-0 end-0">
        <div id="successMessage" class="toast m-2" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-body text-info">
                <i class="bi bi-bell"></i> @successMessage
            </div>
        </div>
    </div>
}

<div class="d-flex flex-row align-items-center w-100 my-2">
    <h1 class="me-auto text-primary">
        Category List
    </h1>
    <div>
        <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            <span class="ms-1">Add New Category</span>
        </a>
    </div>
</div>

<table class="table table-striped table-bordered w-100">
    <thead class="table-dark">
    <tr>
        <th class="pb-4">
                Category Name
        </th>
        <th width="100">Display Order</th>
        <th width="180"></th>
    </tr>
    </thead>
    <tbody>
    @foreach(var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.DisplayOrder</td>
            <td class="d-flex flex-row justify-content-center gap-2">
                <div class='d-grid flex-fill'>
                    <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-pencil-square"></i> <span class="ms-1"> Edit</span>
                    </a>
                </div>
                <div class="d-grid flex-fill">
                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i><span class="ms-1">Delete</span>
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

