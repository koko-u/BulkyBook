@using BulkyBook.Presentation.ViewModels
@model CreateProductViewModel
@{
    ViewData["Title"] = "Create Product";
}
@section Scripts {
    <script defer type="text/javascript">
        $(document).ready(() => {
            $('.input-validation-error').addClass('is-invalid');
            $('.field-validation-error').addClass('is-invalid');
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}


    <h1 class="mt-2 mb-4">
        Create New Product
    </h1>

    <form method="POST" asp-controller="Products" asp-action="Create">
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="Title">Title</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Title" aria-describedby="titleFeedback">
                <div id="titleFeedback" class="invalid-feedback">
                    <span asp-validation-for="Title"></span>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="Description">Description</label>
            <div class="col-sm-10">
                <textarea class="form-control" asp-for="Description" aria-describedby="descriptionFeedback"></textarea>
                <div id="descriptionFeedback" class="invalid-feedback">
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="Isbn">ISBN</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Isbn" aria-describedby="isbnFeedback">
                <div id="isbnFeedback" class="invalid-feedback">
                    <span asp-validation-for="Isbn"></span>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="Author">Author Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Author" aria-describedby="authorFeedback">
                <div id="authorFeedback" class="invalid-feedback">
                    <span asp-validation-for="Author"></span>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="ListPrice">List Price</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="ListPrice" aria-describedby="listPriceFeedback">
                <div id="listPriceFeedback" class="invalid-feedback">
                    <span asp-validation-for="ListPrice"></span>
                </div>
            </div>
        </div>




        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="CategoryId">Category</label>
            <div class="col-sm-10">
                <select class="form-select" aria-label="Category Name"
                        asp-for="CategoryId" asp-items="Model.Categories" aria-describedby="categoryFeedback">
<!--                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option> -->
                </select>

                <div id="categoryFeedback" class="invalid-feedback">
                    <span asp-validation-for="CategoryId"></span>
                </div>
            </div>
        </div>



        <div class="mb-3 d-flex flex-row">
            <button type="submit" class="me-1 btn btn-primary">Create</button>
            <a asp-controller="Products" asp-action="Index" class="ms-1 btn btn-outline-secondary">Cancel</a>
        </div>
    </form>