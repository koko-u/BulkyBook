@using BulkyBook.Presentation.ViewModels
@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Product List";
}

<div class="d-flex flex-row align-items-center w-100 my-2">
    <h1 class="me-auto text-primary">
        Product List
    </h1>
    <div>
        <a asp-controller="Products" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            <span class="ms-1">Add New Product</span>
        </a>
    </div>
</div>

<table class="table table-striped table-bordered w-100">
    <thead class="table-dark">
    <tr>
        <th>
            Title
        </th>
        <th>Author</th>
        <th width="180"></th>
    </tr>
    </thead>
    <tbody>
    @foreach(var product in Model)
    {
        <tr>
            <td>@product.Title</td>
            <td>@product.Author</td>
            <td class="d-flex flex-row justify-content-center gap-2">
                <div class='d-grid flex-fill'>
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-pencil-square"></i> <span class="ms-1"> Edit</span>
                    </a>
                </div>
                <div class="d-grid flex-fill">
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i><span class="ms-1">Delete</span>
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>


